{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["packages/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5"
  },
  "include": [
    "examples/**/*.ts",
    "packages/**/*.ts",
    "test/global-types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
