{
  "name": "@loopback/logging",
  "description": "An extension exposes logging for Winston and Fluentd with LoopBack 4",
  "version": "0.13.9",
  "keywords": [
    "LoopBack",
    "Cloud Native",
    "Fluentd",
    "Winston",
    "Logging"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "IBM Corp. and LoopBack contributors",
  "copyright.owner": "IBM Corp. and LoopBack contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/loopbackio/loopback-next.git",
    "directory": "extensions/logging"
  },
  "engines": {
    "node": "20 || 22 || 24"
  },
  "scripts": {
    "build": "lb-tsc",
    "clean": "lb-clean loopback-extension-logging*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "verify": "npm pack && tar xf loopback-extension-logging*.tgz && tree package && npm run clean"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__",
    "templates"
  ],
  "peerDependencies": {
    "@loopback/core": "^7.0.0",
    "@loopback/rest": "^15.0.1"
  },
  "dependencies": {
    "fluent-logger": "^3.4.1",
    "morgan": "^1.10.1",
    "tslib": "^2.8.1",
    "winston": "^3.19.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@loopback/build": "^12.0.8",
    "@loopback/core": "^7.0.8",
    "@loopback/eslint-config": "^16.0.1",
    "@loopback/rest": "^15.0.9",
    "@loopback/testlab": "^8.0.8",
    "@types/morgan": "^1.9.10",
    "@types/node": "^16.18.126"
  }
}
