{
  "name": "@loopback/example-lb3-application",
  "version": "2.0.0",
  "description": "Tutorial example on how to add existing an LB3 application to a LB4 project",
  "main": "index.js",
  "engines": {
    "node": ">=10"
  },
  "author": "IBM Corp.",
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean *example-lb3-application*.tgz dist *.tsbuildinfo package",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "verify": "npm pack && tar xf loopback-lb3-application*.tgz && tree package && npm run clean",
    "migrate": "node ./dist/migrate",
    "prestart": "npm run build",
    "start": "node ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strongloop/loopback-next.git",
    "directory": "examples/lb3-application"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "dependencies": {
    "@loopback/boot": "^2.0.0",
    "@loopback/booter-lb3app": "^2.0.0",
    "@loopback/context": "^3.0.0",
    "@loopback/core": "^2.0.0",
    "@loopback/repository": "^2.0.0",
    "@loopback/rest": "^3.0.0",
    "@loopback/rest-explorer": "^2.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "loopback": "^3.27.0",
    "loopback-boot": "^3.3.1",
    "p-event": "^4.1.0",
    "tslib": "^1.11.1"
  },
  "devDependencies": {
    "@loopback/build": "^4.0.0",
    "@loopback/eslint-config": "^6.0.0",
    "@loopback/rest": "^1.11.1",
    "@loopback/testlab": "^2.0.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "^10.17.17",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-plugin": "^2.2.1",
    "eslint-plugin-mocha": "^6.3.0",
    "lodash": "^4.17.15",
    "typescript": "~3.8.3"
  },
  "keywords": [
    "loopback",
    "LoopBack",
    "example"
  ]
}
