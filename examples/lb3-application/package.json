{
  "name": "@loopback/example-lb3-application",
  "description": "Tutorial example on how to add existing an LB3 application to a LB4 project",
  "version": "7.0.3",
  "keywords": [
    "loopback",
    "LoopBack",
    "example"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "IBM Corp. and LoopBack contributors",
  "copyright.owner": "IBM Corp. and LoopBack contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/loopbackio/loopback-next.git",
    "directory": "examples/lb3-application"
  },
  "engines": {
    "node": "18 || 20 || 22"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "clean": "lb-clean *example-lb3-application*.tgz dist *.tsbuildinfo package",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "lb-mocha \"dist/__tests__/**/*.js\" \"lb3app/test/*.js\"",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "verify": "npm pack && tar xf loopback-lb3-application*.tgz && tree package && npm run clean",
    "premigrate": "npm run build ",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "rebuild": "npm run clean && npm run build",
    "prestart": "npm run rebuild",
    "start": "node ."
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@loopback/boot": "^7.0.3",
    "@loopback/booter-lb3app": "^6.0.3",
    "@loopback/core": "^6.1.0",
    "@loopback/repository": "^7.0.3",
    "@loopback/rest": "^14.0.3",
    "@loopback/rest-explorer": "^7.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "debug": "^4.3.5",
    "express": "^4.19.2",
    "helmet": "^4.6.0",
    "loopback": "^3.28.0",
    "loopback-boot": "^3.3.1",
    "tslib": "^2.6.3"
  },
  "devDependencies": {
    "@loopback/build": "^11.0.3",
    "@loopback/eslint-config": "^15.0.3",
    "@loopback/testlab": "^7.0.3",
    "@types/lodash": "^4.17.5",
    "@types/node": "^16.18.101",
    "eslint": "^8.57.0",
    "lodash": "^4.17.21",
    "should": "^13.2.3",
    "typescript": "~5.2.2"
  }
}
