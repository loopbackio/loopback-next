  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Mocha tests",
      "program": "${workspaceRoot}/packages/build/node_modules/mocha/bin/_mocha",
      "cwd": "${workspaceRoot}",
      "args": [
        "--config",
        "${workspaceRoot}/packages/build/config/.mocharc.json",
        "packages/*/dist/__tests__/**/*.js",
        "-t",
        "0"
      ]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 5858
    }
  ]
}
