{
  "name": "@loopback/build",
  "description": "A set of common scripts and default configurations to build LoopBack 4 or other TypeScript modules",
  "version": "8.1.1",
  "license": "MIT",
  "bin": {
    "lb-tsc": "./bin/compile-package.js",
    "lb-ttsc": "./bin/compile-package.js",
    "lb-eslint": "./bin/run-eslint.js",
    "lb-prettier": "./bin/run-prettier.js",
    "lb-mocha": "./bin/run-mocha.js",
    "lb-nyc": "./bin/run-nyc.js",
    "lb-clean": "./bin/run-clean.js"
  },
  "main": "index.js",
  "author": "IBM Corp.",
  "copyright.owner": "IBM Corp.",
  "repository": {
    "type": "git",
    "url": "https://github.com/loopbackio/loopback-next.git",
    "directory": "packages/build"
  },
  "engines": {
    "node": "12 || 14 || 16 || 17"
  },
  "scripts": {
    "test": "npm run mocha",
    "mocha": "node bin/run-mocha --timeout 30000 \"test/integration/*.js\" \"test/unit/*.js\""
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@loopback/eslint-config": "^12.0.3",
    "@types/mocha": "^9.1.0",
    "@types/node": "^12.20.47",
    "cross-spawn": "^7.0.3",
    "debug": "^4.3.4",
    "eslint": "^8.10.0",
    "fs-extra": "^10.0.1",
    "glob": "^7.2.0",
    "lodash": "^4.17.21",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "typescript": "~4.6.2"
  }
}
