{
  "name": "@loopback/repository",
  "description": "Define and implement a common set of interfaces for interacting with databases",
  "version": "8.0.8",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "IBM Corp. and LoopBack contributors",
  "copyright.owner": "IBM Corp. and LoopBack contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/loopbackio/loopback-next.git",
    "directory": "packages/repository"
  },
  "engines": {
    "node": "20 || 22 || 24"
  },
  "scripts": {
    "acceptance": "lb-mocha \"dist/__tests__/acceptance/**/*.js\"",
    "build": "lb-tsc",
    "clean": "lb-clean loopback-repository*.tgz dist *.tsbuildinfo package",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "verify": "npm pack && tar xf loopback-repository*.tgz && tree package && npm run clean"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "peerDependencies": {
    "@loopback/core": "^7.0.0"
  },
  "dependencies": {
    "@loopback/filter": "^6.0.8",
    "@types/debug": "^4.1.12",
    "debug": "^4.4.3",
    "lodash": "^4.17.23",
    "loopback-datasource-juggler": "^6.0.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@loopback/build": "^12.0.8",
    "@loopback/core": "^7.0.8",
    "@loopback/eslint-config": "^16.0.1",
    "@loopback/testlab": "^8.0.8",
    "@types/json-schema": "^7.0.15",
    "@types/lodash": "^4.17.23",
    "@types/node": "^16.18.126",
    "bson": "7.1.1"
  }
}
