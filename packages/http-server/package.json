{
  "name": "@loopback/http-server",
  "version": "1.5.4",
  "description": "A wrapper for creating HTTP/HTTPS servers",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "lb-tsc",
    "clean": "lb-clean loopback-http-server*.tgz dist tsconfig.build.tsbuildinfo package",
    "pretest": "npm run build",
    "test": "lb-mocha \"dist/__tests__/**/*.js\"",
    "verify": "npm pack && tar xf loopback-http-server*.tgz && tree package && npm run clean"
  },
  "author": "IBM Corp.",
  "copyright.owner": "IBM Corp.",
  "license": "MIT",
  "dependencies": {
    "p-event": "^4.1.0",
    "stoppable": "^1.1.0"
  },
  "devDependencies": {
    "@loopback/build": "^3.1.1",
    "@loopback/core": "^1.12.4",
    "@loopback/eslint-config": "^5.0.3",
    "@loopback/testlab": "^1.10.3",
    "@types/node": "^10.17.16",
    "@types/stoppable": "^1.1.0"
  },
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/strongloop/loopback-next.git",
    "directory": "packages/http-server"
  }
}
