import {ApplicationConfig, <%= project.applicationName %>} from './application';
<% if (project.isHttp2) { -%>
import * as fs from 'fs';
import path from 'path';
import spdy from 'spdy';
<% } -%>

export * from './application';

export async function main(options: ApplicationConfig = {}) {
<% if (project.isHttp2) { -%>
  const spdyOptions = options.spdy;
  delete options.spdy;
  options.rest.listenOnStart = false;
<% } -%>
  const app = new <%= project.applicationName %>(options);
  await app.boot();
  await app.start();

<% if (project.isHttp2) { -%>
  // create spdy h2 server
  const server = spdy.createServer(spdyOptions, app.requestHandler);

  //ignore the warnings
  server.on('warning', warn => {
    console.log(warn.stack);
  });

  server.listen(options.rest.port, () => {
    console.log(
    `Listening on https://${app.options.rest.host}:${app.options.rest.port}/`,
    );
  });
<% }else { -%>
  const url = app.restServer.url;
  console.log(`Server is running at ${url}`);
  console.log(`Try ${url}/ping`);
<% } -%>

  return app;
}

if (require.main === module) {
  // Run the application
  const config = {
    rest: {
      port: +(process.env.PORT ?? 3000),
      host: process.env.HOST,
      // The `gracePeriodForClose` provides a graceful close for http/https
      // servers with keep-alive clients. The default value is `Infinity`
      // (don't force-close). If you want to immediately destroy all sockets
      // upon stop, set its value to `0`.
      // See https://www.npmjs.com/package/stoppable
      gracePeriodForClose: 5000, // 5 seconds
      openApiSpec: {
        // useful when used with OpenAPI-to-GraphQL to locate your application
        setServersFromRequest: true,
      },
    },
<% if (project.isHttp2) { -%>
    spdy: {
      key: fs.readFileSync(path.join(__dirname, process.env.KEY ?? '')),
      cert: fs.readFileSync(path.join(__dirname, process.env.CERT ?? '')),
    }
<% } -%>
  };
  main(config).catch(err => {
    console.error('Cannot start the application.', err);
    process.exit(1);
  });
}
