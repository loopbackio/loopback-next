{
  "name": "<%= project.name -%>",
  "version": "1.0.0",
  "description": "<%= project.description -%>",
  "keywords": [
    "loopback-<%= project.projectType -%>",
    "loopback"
  ],
  "main": "index.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "build": "tsc --outDir dist --target es2017",
    "build:watch": "tsc --outDir dist --target es2017 --watch",
    "clean": "rm -rf dist",
<% if (project.prettier && project.tslint) { -%>
    "lint": "npm run prettier:check && npm run tslint",
    "lint:fix": "npm run prettier:fix && npm run tslint:fix",
<% } else if (project.prettier) { -%>
    "lint": "npm run prettier:check",
    "lint:fix": "npm run prettier:fix",
<% } else if (project.tslint) { -%>
    "lint": "npm run tslint",
    "lint:fix": "npm run tslint:fix",
<% } -%>
<% if (project.prettier) { -%>
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
<% } -%>
<% if (project.tslint) { -%>
    "tslint": "tslint",
    "tslint:fix": "npm run tslint -- --fix",
<% } -%>
    "pretest": "npm run clean && npm run build",
<% if (project.mocha) { -%>
    "test": "mocha dist/test",
<% } -%>
<% if (project.prettier || project.tslint) { -%>
    "posttest": "npm run lint",
<% } -%>
<% if (project.projectType === 'application') { -%>
    "start": "npm run build && node .",
<% } -%>
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "MIT",
  "files": [
    "README.md",
    "index.js",
    "index.d.ts",
    "dist"
  ],
  "dependencies": {
    "@loopback/context": ">=4.0.0-alpha.18",
<% if (project.projectType === 'application') { -%>
    "@loopback/core": ">=4.0.0-alpha.20",
    "@loopback/rest": ">=4.0.0-alpha.7",
    "@loopback/openapi-v3": ">=4.0.0-alpha.1"
<% } else { -%>
    "@loopback/core": ">=4.0.0-alpha.20"
<% } -%>
  },
  "devDependencies": {
<% if (project.prettier) { -%>
    "prettier": "^1.7.3",
<% } -%>
<% if (project.tslint) { -%>
    "tslint": "^5.7.0",
<% } -%>
    "@loopback/testlab": ">=4.0.0-alpha.13",
<% if (project.mocha) { -%>
    "@types/mocha": "^2.2.43",
    "mocha": "^4.0.1",
    "source-map-support": "^0.5.2",
<% } -%>
    "typescript": "^2.5.3"
  }
}
