{
  "lerna": "2.9.1",
  "packages": ["packages/*", "examples/*", "docs", "sandbox/*"],
  "command": {
    "publish": {
      "forcePublish": "@loopback/cli,@loopback/docs",
      "conventionalCommits": true,
      "message": "chore: publish release"
    },
    "run": {
      "prefix": false,
      "loglevel": "silent",
      "parallel": true
    },
    "clean": {
      "loglevel": "silent",
      "concurrency": 8,
      "yes": true
    }
  },
  "version": "independent"
}
