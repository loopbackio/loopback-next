{
  "command": {
    "bootstrap": {
      "concurrency": 4,
      "forceLocal": true
    },
    "version": {
      "forcePublish": ["@loopback/cli", "@loopback/docs"],
      "message": "chore: publish release",
      "conventionalCommits": true
    },
    "run": {
      "loglevel": "silent",
      "concurrency": 8,
      "prefix": false,
      "stream": true,
      "sort": false
    },
    "clean": {
      "loglevel": "silent",
      "concurrency": 8,
      "yes": true
    }
  },
  "useWorkspaces": true,
  "version": "independent"
}
