{
  "lerna": "3.1.2",
  "packages": [
    "benchmark",
    "docs",
    "examples/*",
    "packages/*",
    "sandbox/*"
  ],
  "command": {
    "publish": {
      "forcePublish": "@loopback/cli,@loopback/docs",
      "conventionalCommits": true,
      "message": "chore: publish release"
    },
    "run": {
      "prefix": false,
      "loglevel": "silent",
      "parallel": true
    },
    "clean": {
      "loglevel": "silent",
      "concurrency": 8,
      "yes": true
    }
  },
  "version": "independent"
}
